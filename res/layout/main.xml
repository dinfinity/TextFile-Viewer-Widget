<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="4dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/widget_top"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/titleContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Title"
            android:textColor="#fff" >

        </TextView>

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:background="@drawable/button_selector"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hapticFeedbackEnabled="true"
            android:scaleType="center"
            android:src="@drawable/edit24x24"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:background="@drawable/button_selector"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hapticFeedbackEnabled="true"
            android:scaleType="center"
            android:src="@drawable/settings24x24"
            android:visibility="visible" >

        </ImageButton>
    </LinearLayout>

    <TextView
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:autoLink="all"
        android:background="@drawable/widget_center"
        android:clickable="true"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="20.0dip"
        android:hapticFeedbackEnabled="true"
        android:overScrollMode="always"
        android:paddingBottom="6.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="6.0dip"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:shadowColor="#ff000000"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="2.5"
        android:text="@string/no_file_loaded"
        android:textColor="#ffffffff"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@drawable/widget_bottom"
        android:orientation="horizontal" >

    </LinearLayout>

</LinearLayout>