<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingBottom="26px"
	android:background="@drawable/htc_style_background"
	android:paddingLeft="1px" android:paddingRight="1px"
	android:layout_margin="16dp" android:paddingTop="0px" xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:paddingLeft="6dp"
		android:paddingTop="2dp" android:paddingBottom="2dp"
		android:orientation="horizontal" android:paddingRight="6dp"
		android:layout_marginRight="8px" android:layout_marginLeft="8px"
		android:layout_height="48px">

		<TextView android:text="Title" android:textColor="#fff" android:layout_height="fill_parent"
			android:id="@+id/titleContainer" android:layout_width="wrap_content"
			android:layout_gravity="left" android:layout_weight="1"
			android:paddingTop="10px"></TextView>

		<ImageButton
		    android:id="@+id/ImageButton02"
		    android:layout_width="72dp"
		    android:layout_height="36px"
		    android:layout_marginRight="8dp"
		    android:layout_marginTop="4px"
		    android:layout_weight="0"
		    android:background="@drawable/button_selector"
		    android:clickable="true"
		    android:focusable="false"
		    android:focusableInTouchMode="false"
		    android:hapticFeedbackEnabled="true"
		    android:scaleType="center"
		    android:src="@drawable/edit24x24"
		    android:visibility="visible" />

		<ImageButton
		    android:id="@+id/ImageButton01"
		    android:layout_width="72dp"
		    android:layout_height="36px"
		    android:layout_marginRight="0px"
		    android:layout_marginTop="4px"
		    android:layout_weight="0"
		    android:background="@drawable/button_selector"
		    android:clickable="true"
		    android:focusable="false"
		    android:focusableInTouchMode="false"
		    android:hapticFeedbackEnabled="true"
		    android:scaleType="center"
		    android:src="@drawable/settings24x24"
		    android:visibility="visible" >

		</ImageButton>

	</LinearLayout>

    <TextView
        android:id="@+id/textContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:autoLink="all"
        android:clickable="true"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="20.0dip"
        android:hapticFeedbackEnabled="true"
        android:paddingBottom="6.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="6.0dip"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="vertical"
        android:shadowColor="#ff000000"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="2.5"
        android:text="@string/no_file_loaded"
        android:textColor="#ffffffff"
        android:textSize="13.0dip"></TextView>

</LinearLayout>
